// @it have base ratio of 1.3
.class
  background-color #bada55

  +media-hidpi()
    background-color #fec0ff

// @expect
.class {
  background-color: #bada55;
}
@media (-webkit-min-device-pixel-ratio: 1.3), (min-resolution: 124dpi) {
  .class {
    background-color: #fec0ff;
  }
}

// @it have ratio of 2
.class
  background-color #bada55

  +media-hidpi(2)
    background-color #fec0ff

// @expect
.class {
  background-color: #bada55;
}
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .class {
    background-color: #fec0ff;
  }
}