// @describe grid-reverse(namespace)

// @it output (optionally namespace-prefixed) styles to reverse the direction of grid items
grid-reverse()
grid-reverse('desk-')

// @expect
.grid--reverse {
  direction: rtl;
  text-align: right;
}
.grid--reverse > .grid__item {
  direction: ltr;
  text-align: left;
}
.desk-grid--reverse {
  direction: rtl;
  text-align: right;
}
.desk-grid--reverse > .grid__item {
  direction: ltr;
  text-align: left;
}


// @describe grid-narrow(namespace)

// @it output (optionally namespace-prefixed) styles to halve gutter width
grid-narrow()
grid-narrow('desk-')

// @expect
.grid--narrow {
  margin-left: -10px;
}
.grid--narrow > .grid__item {
  padding-left: 10px;
}
.desk-grid--narrow {
  margin-left: -10px;
}
.desk-grid--narrow > .grid__item {
  padding-left: 10px;
}

// @it accept $grid--gutter values other than the default
$grid--gutter = 1em
grid-narrow()

// @expect
.grid--narrow {
  margin-left: -0.5em;
}
.grid--narrow > .grid__item {
  padding-left: 0.5em;
}


