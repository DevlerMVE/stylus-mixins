// @describe clearfix()

// @it should output default clearfix styles
.element
  clearfix()

// @expect
.element:after,
.element:before {
  content: "";
  display: table;
}
.element:after {
  clear: both;
}

// @it should output clearfix styles with additional IE7 content if $is-ie--version == 7
$is-ie = true
$is-ie--version = 7

.element
  clearfix()

// @expect
.element {
  zoom: 1;
}
.element:after,
.element:before {
  content: "";
  display: table;
}
.element:after {
  clear: both;
}
