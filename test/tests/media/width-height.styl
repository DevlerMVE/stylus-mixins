// @describe width-min(int)

// @it output content in a media query with a minimum width
.class
  +width-min(100px)
    background-color #fec0ff
+width-min(10em)
  .class
    background-color #fec0ff

// @expect
@media screen and (min-width: 100px) {
  .class {
    background-color: #fec0ff;
  }
}
@media screen and (min-width: 10em) {
  .class {
    background-color: #fec0ff;
  }
}

// @it output without media queries if $no-mq is true, and `int` is within the fixed bounds.
+width-min(960px)
  .class
    background-color #fec0ff
$no-mq = true
$width--fixed-min = 960px
// Within bounds: $width--fixed-min is larger than 959px
+width-min(959px)
  .class1
    background-color #bada55
// Within bounds: $width--fixed-min is equal to 960px
+width-min(960px)
  .class2
    background-color #c0ffee
// Out of bounds: $width--fixed-min is smaller than 961px
+width-min(961px)
  .class3
    background-color #fec0ff

// @expect
@media screen and (min-width: 960px) {
  .class {
    background-color: #fec0ff;
  }
}
.class1 {
  background-color: #bada55;
}
.class2 {
  background-color: #c0ffee;
}


