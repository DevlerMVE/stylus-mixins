// @it media-hidpi() should have default base ratio of 1.3
.class
  +media-hidpi()
    background-color #fec0ff
+media-hidpi()
  .class
    background-color #fec0ff

// @expect
@media (-webkit-min-device-pixel-ratio: 1.3), (min-resolution: 124dpi) {
  .class {
    background-color: #fec0ff;
  }
}
@media (-webkit-min-device-pixel-ratio: 1.3), (min-resolution: 124dpi) {
  .class {
    background-color: #fec0ff;
  }
}

// @it media-hidpi(int) should accept an optional ratio to use
.class
  +media-hidpi(2)
    background-color #fec0ff

// @expect
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .class {
    background-color: #fec0ff;
  }
}
